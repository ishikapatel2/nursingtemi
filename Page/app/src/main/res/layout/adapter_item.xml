<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/radius8_1">
<ImageView
    android:id="@+id/iv_1"
    android:layout_width="12dp"
    android:layout_height="12dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="6dp"/>
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="6dp"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="@+id/iv_1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_1"
        app:layout_constraintLeft_toRightOf="@+id/iv_1"
        android:layout_marginLeft="@dimen/dp_4"/>
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_1"
        android:layout_marginRight="6dp"/>
    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="@+id/iv_1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_1"
        app:layout_constraintRight_toLeftOf="@+id/tv_3"
        android:layout_marginRight="4dp"
        android:background="@mipmap/like"/>
    <ImageView
        android:id="@+id/iv_3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_1"
        android:layout_marginTop="6dp"/>
    <TextView
        android:id="@+id/tv_6"
        android:layout_width="60dp"
        android:layout_height="@dimen/sp_14"
        android:textSize="@dimen/dp_10"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/iv_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_3"
        app:layout_constraintRight_toRightOf="@+id/iv_3"/>
</androidx.constraintlayout.widget.ConstraintLayout>