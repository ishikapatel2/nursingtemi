<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/color_bg">

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="416dp"
        android:layout_height="118dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@mipmap/welcome"
        android:layout_marginTop="129dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_top"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@mipmap/line_bg"
        android:layout_marginTop="55dp">
        <LinearLayout
            android:id="@+id/lin_1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="225dp"
            android:layout_marginRight="225dp"
            android:layout_marginTop="121dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TOUR"
                android:textSize="24dp"
                android:paddingLeft="24dp"
                android:gravity="center_vertical"
                android:drawablePadding="24dp"
                android:drawableLeft="@mipmap/icon5"
                android:textColor="@color/white"
                android:layout_marginRight="24dp"
                android:drawableRight="@mipmap/more"
                android:paddingRight="24dp"
                android:foreground="?selectableItemBackground"
                android:background="@drawable/gradient_bg"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="SURVE"
                android:textSize="24dp"
                android:paddingLeft="24dp"
                android:gravity="center_vertical"
                android:drawablePadding="24dp"
                android:drawableLeft="@mipmap/icon1"
                android:textColor="@color/white"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:drawableRight="@mipmap/more"
                android:paddingRight="24dp"
                android:foreground="?selectableItemBackground"
                android:background="@drawable/gradient_bg"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="DELIVERY"
                android:textSize="24dp"
                android:paddingLeft="24dp"
                android:gravity="center_vertical"
                android:drawablePadding="24dp"
                android:textColor="@color/white"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:drawableLeft="@mipmap/icon2"
                android:drawableRight="@mipmap/more"
                android:paddingRight="24dp"
                android:foreground="?selectableItemBackground"
                android:background="@drawable/gradient_bg"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="INFO"
                android:textSize="24dp"
                android:paddingLeft="24dp"
                android:gravity="center_vertical"
                android:drawablePadding="24dp"
                android:drawableLeft="@mipmap/icon3"
                android:textColor="@color/white"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:drawableRight="@mipmap/more"
                android:paddingRight="24dp"
                android:foreground="?selectableItemBackground"
                android:background="@drawable/gradient_bg"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Exit"
                android:textSize="24dp"
                android:paddingLeft="24dp"
                android:gravity="center_vertical"
                android:drawablePadding="24dp"
                android:textColor="@color/white"
                android:drawableLeft="@mipmap/icon4"
                android:layout_marginLeft="24dp"
                android:drawableRight="@mipmap/more"
                android:paddingRight="24dp"
                android:textAllCaps="false"
                android:foreground="?selectableItemBackground"
                android:background="@drawable/gradient_bg2"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/lin_1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@mipmap/bg_main"
            android:layout_marginTop="74dp"
            android:layout_marginLeft="361dp"
            android:layout_marginRight="360dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>